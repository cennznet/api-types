{
  "compilerOptions": {
    "allowJs": false,
    "target": "esnext",
    "moduleResolution": "node",
    "module": "commonjs",
    "allowSyntheticDefaultImports": true,
    "outDir": "./dist",
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "declaration": true
  },
  "paths": {
    "@cennznet/api-types/*": ["src/interfaces/*"],
    "@polkadot/api/augment": ["src/interfaces/augment-api.ts"],
    "@polkadot/types/augment": ["src/interfaces/augment-types.ts"]
  },
  "typeRoots": [
    "./node_modules/@types"
  ],
  "exclude": [
    "dist/**/*",
    "node_modules"
  ]
}
